{
  "Swagger": {
    "Enabled": true,
    "EnableUI": true,
    "Title": "Enterprise WCF Client API",
    "Version": "v1",
    "Description": "DMZ - WCF Client API",
    "EnableBearerAuth": true,
    "AllowedEnvironments": []
  },
  "ServerApi": {
    "BaseUrl": "https://localhost:5101"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "Enterprise.Api.Server",
    "Audience": "Enterprise.Api.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "WcfClient": {
    "CustomerServiceEndpoint": "http://localhost:5100/CustomerService.svc",
    "OrderServiceEndpoint": "http://localhost:5100/OrderService.svc",
    "Binding": "BasicHttp",
    "TimeoutSeconds": 30,
    "MaxMessageSize": 65536
  },
  "SensitiveData": {
    "SensitiveFields": [
      "password",
      "token",
      "secret",
      "creditCard",
      "cvv",
      "tckn"
    ],
    "MaskCreditCards": true,
    "MaskEmails": true,
    "MaskPhoneNumbers": true,
    "MaskIbans": true
  },
  "Logging": {
    "ApplicationName": "Enterprise.Api.Client.Wcf",
    "ApplicationVersion": "1.0.0",
    "Environment": "Development",
    "BufferSize": 10000,
    "BatchSize": 100,
    "FlushIntervalMs": 5000,
    "Sinks": {
      "Console": true,
      "File": true,
      "Database": false,
      "Elasticsearch": false
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*"
}


{
  "Swagger": {
    "Enabled": true,
    "EnableUI": true,
    "Title": "Enterprise Server API",
    "Version": "v1",
    "Description": "Secure Zone - Internal API",
    "EnableBearerAuth": true,
    "EnableApiKeyAuth": false,
    "IncludeXmlComments": true,
    "RoutePrefix": "swagger",
    "Theme": "light",
    "DocExpansion": "list",
    "AllowedEnvironments": []
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=FREEPDB1)));User Id=BenchMark;Password=Ora123456;"
  },
  "SensitiveData": {
    "SensitiveFields": [
      "password",
      "pwd",
      "secret",
      "token",
      "accessToken",
      "refreshToken",
      "apiKey",
      "authorization",
      "credential",
      "creditCard",
      "cardNumber",
      "cvv",
      "pin",
      "ssn",
      "tckn",
      "tcKimlikNo",
      "identityNumber",
      "privateKey",
      "connectionString"
    ],
    "MaskCreditCards": true,
    "MaskEmails": true,
    "MaskPhoneNumbers": true,
    "MaskIbans": true,
    "MaskedText": "***MASKED***"
  },
  "Logging": {
    "ApplicationName": "Enterprise.Api.Server",
    "ApplicationVersion": "1.0.0",
    "Environment": "Development",
    "BufferSize": 10000,
    "BatchSize": 100,
    "FlushIntervalMs": 5000,
    "RequestBodyMaxLength": 32768,
    "ResponseBodyMaxLength": 32768,
    "File": {
      "Enabled": true,
      "BasePath": "logs",
      "UseApplicationSubfolder": true,
      "RetentionDays": 30,
      "MaxFileSizeMB": 100,
      "CompressOldFiles": false,
      "UseJsonFormat": false,
      "RollingInterval": "Day",
      "SeparateFiles": {
        "AllLogs": true,
        "ErrorLogs": true,
        "RequestLogs": true,
        "PerformanceLogs": true,
        "BusinessLogs": true,
        "SecurityLogs": true
      }
    },
    "Database": {
      "Enabled": false,
      "Provider": "Oracle",
      "ConnectionStrings": {
        "SqlServer": "Server=.;Database=EnterpriseLogs;Trusted_Connection=True;TrustServerCertificate=True;",
        "Oracle": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=FREEPDB1)));User Id=BenchMark;Password=Ora123456;"
      },
      "BatchSize": 100,
      "FlushIntervalSeconds": 5,
      "LogTypes": {
        "RequestLogs": true,
        "ResponseLogs": true,
        "ExceptionLogs": true,
        "BusinessExceptionLogs": true,
        "AuditLogs": true,
        "PerformanceLogs": true,
        "SecurityLogs": true
      }
    },
    "Elk": {
      "Enabled": false,
      "ElasticsearchUrl": "http://localhost:9200",
      "IndexFormat": "enterprise-server-{0:yyyy.MM.dd}",
      "NumberOfShards": 3,
      "NumberOfReplicas": 1,
      "BatchSize": 50,
      "FlushIntervalSeconds": 2,
      "BufferPath": "./logs/elk-buffer",
      "Username": "",
      "Password": "",
      "UseSSL": false
    }
  },
  "Cache": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "Enterprise:",
    "DefaultExpirationMinutes": 30,
    "ParameterExpirationMinutes": 60
  },
  "Database": {
    "Provider": "Oracle",
    "ConnectionStrings": {
      "SqlServer": "Server=.;Database=EnterpriseDb;Trusted_Connection=True;TrustServerCertificate=True;",
      "Oracle": "Data Source=(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=localhost)(PORT=1521))(CONNECT_DATA=(SERVICE_NAME=FREEPDB1)));User Id=BenchMark;Password=Ora123456;"
    },
    "OrmType": "EfCore",
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableAutoMigration": false,
    "EnableSensitiveDataLogging": true
  },
  "Orm": {
    "ActiveOrm": "EfCore"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5001",

      "http://localhost:5000"
    ]
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "Enterprise.Api.Server",
    "Audience": "Enterprise.Api.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}


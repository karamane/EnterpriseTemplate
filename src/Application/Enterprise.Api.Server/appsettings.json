{
  "Swagger": {
    "Enabled": true,
    "EnableUI": true,
    "Title": "Enterprise Server API",
    "Version": "v1",
    "Description": "Secure Zone - Internal API",
    "EnableBearerAuth": true,
    "EnableApiKeyAuth": false,
    "IncludeXmlComments": true,
    "RoutePrefix": "swagger",
    "Theme": "light",
    "DocExpansion": "list",
    "AllowedEnvironments": []
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=EnterpriseDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "SensitiveData": {
    "SensitiveFields": [
      "password",
      "pwd",
      "secret",
      "token",
      "accessToken",
      "refreshToken",
      "apiKey",
      "authorization",
      "credential",
      "creditCard",
      "cardNumber",
      "cvv",
      "pin",
      "ssn",
      "tckn",
      "tcKimlikNo",
      "identityNumber",
      "privateKey",
      "connectionString"
    ],
    "MaskCreditCards": true,
    "MaskEmails": true,
    "MaskPhoneNumbers": true,
    "MaskIbans": true,
    "MaskedText": "***MASKED***"
  },
  "Logging": {
    "ApplicationName": "Enterprise.Api.Server",
    "ApplicationVersion": "1.0.0",
    "Environment": "Development",
    "BufferSize": 10000,
    "BatchSize": 100,
    "FlushIntervalMs": 5000,
    "RequestBodyMaxLength": 32768,
    "ResponseBodyMaxLength": 32768,
    "Database": {
      "Enabled": true,
      "ConnectionString": "Server=.;Database=EnterpriseLogs;Trusted_Connection=True;TrustServerCertificate=True;",
      "BatchSize": 100,
      "FlushIntervalSeconds": 5
    },
    "Elk": {
      "Enabled": false,
      "ElasticsearchUrl": "http://localhost:9200",
      "IndexFormat": "enterprise-server-{0:yyyy.MM.dd}",
      "NumberOfShards": 3,
      "NumberOfReplicas": 1,
      "BatchSize": 50,
      "FlushIntervalSeconds": 2,
      "BufferPath": "./logs/elk-buffer",
      "Username": "",
      "Password": "",
      "UseSSL": false
    }
  },
  "Cache": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "Enterprise:",
    "DefaultExpirationMinutes": 30,
    "ParameterExpirationMinutes": 60
  },
  "Database": {
    "Provider": "SqlServer",
    "ConnectionString": "Server=.;Database=EnterpriseDb;Trusted_Connection=True;TrustServerCertificate=True;",
    "OrmType": "EfCore",
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "MaxRetryDelay": 30,
    "EnableAutoMigration": false,
    "EnableSensitiveDataLogging": true
  },
  "Orm": {
    "ActiveOrm": "EfCore"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5001",
      "http://localhost:5000"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}


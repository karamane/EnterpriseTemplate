{
  "Swagger": {
    "Enabled": true,
    "EnableUI": true,
    "Title": "Enterprise Client API",
    "Version": "v1",
    "Description": "DMZ - Public API for Mobile Applications",
    "EnableBearerAuth": true,
    "EnableApiKeyAuth": false,
    "AllowedEnvironments": []
  },
  "ServerApi": {
    "BaseUrl": "https://localhost:5101"
  },
  "Logging": {
    "ApplicationName": "Enterprise.Api.Client",
    "ApplicationVersion": "1.0.0",
    "Environment": "Development",
    "Database": {
      "Enabled": true,
      "ConnectionString": "Server=.;Database=EnterpriseLogs;Trusted_Connection=True;TrustServerCertificate=True;"
    },
    "Elk": {
      "Enabled": false,
      "ElasticsearchUrl": "http://localhost:9200"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}

